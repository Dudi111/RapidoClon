<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InviteActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative4"
        android:background="#FFF202">
        <ImageView
            android:id="@+id/ivinvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/invitefrnd"
            android:layout_centerHorizontal="true"
            android:background="#FFF202"
            android:layout_marginTop="50dp"
            android:backgroundTint="#FFF202"/>

        <TextView
            android:id="@+id/tvback3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/ic_baseline_contact_support_24"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_baseline_contact_support_24" />
        <TextView
            android:id="@+id/tvinvi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite your friends and get rewards"
            android:layout_below="@+id/ivinvite"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/inviteode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jhg0154"
            android:layout_below="@+id/tvinvi"
            android:layout_centerInParent="true"
            android:drawableEnd="@drawable/ic_baseline_content_copy_24"
            android:background="@drawable/ic_rectangle_16"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:drawableRight="@drawable/ic_baseline_content_copy_24" />
    </RelativeLayout>
    <TextView
        android:id="@+id/refrnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to refer friend?"
        android:layout_below="@+id/relative4"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_margin="25dp"/>
    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@+id/refrnd"
        android:textSize="40dp"
        android:background="@drawable/ic_ellipse_1"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp" />
    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your Refrel code"
        android:layout_below="@+id/refrnd"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/share1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite your friends via whatsapp,"
        android:layout_below="@+id/share"
        android:layout_centerInParent="true"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/share2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook or any other channel"
        android:layout_below="@+id/share1"
        android:layout_centerInParent="true"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_below="@+id/share2"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_ellipse_1"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp" />
    <TextView
        android:id="@+id/share3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your friend register with us"
        android:layout_below="@+id/share2"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/share4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your friend should register with us"
        android:layout_below="@+id/share3"
        android:layout_centerInParent="true"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/share5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="using your refrel code."
        android:layout_below="@+id/share4"
        android:layout_centerInParent="true"
        android:textSize="17sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite"
        android:background="@drawable/ic_rectangle_16"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share via"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_rectangle_16"
        android:gravity="center"
        android:layout_margin="10dp"
        android:drawableEnd="@drawable/whatsapp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:backgroundTint="#38982c"
        android:drawableRight="@drawable/whatsapp" />











</RelativeLayout>