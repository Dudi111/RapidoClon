<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RideActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel2"
        android:background="#FFF202">

        <TextView
            android:id="@+id/tvback2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Rides"
            android:layout_toRightOf="@+id/tvback2"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/ivrapido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rapido"
        android:layout_below="@+id/rel2"
        android:layout_marginStart="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/tvride1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivrapido"
        android:text="Your rides of last 90 days are shown"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvride2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvride1"
        android:text="here. For rides more than 90 days,"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvride3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvride2"
        android:text="contact support"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvride3"
        android:background="@drawable/ic_rectangle_16"
        android:text="Raise Ticket"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:backgroundTint="#FFF202"
        android:layout_marginTop="25dp"
        />


</RelativeLayout>